{
	"name": "website",
	"version": "0.0.0",
	"prettier": "@leonzalion/configs/prettier",
	"commitlint": {
		"extends": [
			"@leonzalion/configs/commitlint"
		]
	},
	"type": "module",
	"scripts": {
		"dev": "vite",
		"export-project": "node-ts ./scripts/davinci/export-project.ts",
		"convert-videos": "node-ts ./scripts/convert-alpha-videos.ts",
		"build": "vue-tsc --noEmit && vite build",
		"preview": "vite preview",
		"prepare": "simple-git-hooks",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest",
		"lint": "eslint --cache --fix .",
		"prettier": "prettier --write src",
		"tc": "vue-tsc --noEmit"
	},
	"dependencies": {
		"@mdi/js": "^6.5.95",
		"@vueuse/core": "^7.5.5",
		"animejs": "^3.2.1",
		"bezier-easing": "^2.1.0",
		"js-yaml": "^4.1.0",
		"pinia": "^2.0.9",
		"simple-vue-icon": "^1.1.10",
		"typed.js": "^2.0.12",
		"vite-svg-loader": "^3.1.2",
		"vue": "^3.2.29",
		"vue-router": "^4.0.12"
	},
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@leonzalion/configs": "^1.0.53",
		"@types/animejs": "^3.1.4",
		"@types/jest": "^27.4.0",
		"@types/js-yaml": "^4.0.5",
		"@types/node": "^17.0.10",
		"@vitejs/plugin-vue": "^2.1.0",
		"autoprefixer": "^10.4.2",
		"desm": "^1.2.0",
		"eslint": "^8.7.0",
		"execa": "^6.0.0",
		"ffmpeg-static": "^4.4.1",
		"jest": "^27.4.7",
		"lint-staged": "^12.3.1",
		"lion-system": "^1.0.9",
		"postcss": "^8.4.5",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"simple-git-hooks": "^2.7.0",
		"sync-index": "^1.0.11",
		"tailwindcss": "^3.0.16",
		"ts-jest": "^27.1.3",
		"ts-node": "^10.4.0",
		"tsc-alias": "^1.5.0",
		"typescript": "^4.5.5",
		"vite": "^2.7.13",
		"vue-tsc": "^0.30.6"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec node-ts ./scripts/hooks/pre-commit.ts",
		"pre-push": "pnpm exec node-ts ./scripts/hooks/pre-push.ts",
		"commit-msg": "pnpm exec node-ts ./scripts/hooks/commit-msg.ts $@"
	},
	"lint-staged": {
		"*.{js,ts,vue}": [
			"pnpm run lint",
			"pnpm run prettier"
		]
	}
}
