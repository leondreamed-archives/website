{
	"name": "website",
	"version": "0.0.0",
	"prettier": "@leonzalion/configs/prettier",
	"commitlint": {
		"extends": [
			"@leonzalion/configs/commitlint"
		]
	},
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc --noEmit && vite build",
		"preview": "vite preview",
		"prepare": "simple-git-hooks",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest",
		"lint": "eslint --cache --fix .",
		"prettier": "prettier --write src",
		"tc": "vue-tsc --noEmit"
	},
	"dependencies": {
		"@vueuse/core": "^7.5.5",
		"bezier-easing": "^2.1.0",
		"pinia": "^2.0.0-rc.10",
		"vite-svg-loader": "^3.1.2",
		"vue": "^3.2.25"
	},
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@leonzalion/configs": "^1.0.47",
		"@types/jest": "^27.0.3",
		"@types/node": "^17.0.0",
		"@vitejs/plugin-vue": "^2.0.0",
		"autoprefixer": "^10.4.1",
		"eslint": "^8.5.0",
		"execa": "^6.0.0",
		"jest": "^27.4.5",
		"lint-staged": "^12.1.3",
		"postcss": "^8.4.5",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"simple-git-hooks": "^2.7.0",
		"sync-index": "^1.0.11",
		"tailwindcss": "^3.0.11",
		"ts-jest": "^27.1.2",
		"ts-node": "^10.4.0",
		"tsc-alias": "^1.5.0",
		"typescript": "^4.5.4",
		"vite": "^2.7.2",
		"vue-tsc": "^0.30.2"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec node-ts ./scripts/hooks/pre-commit.ts",
		"pre-push": "pnpm exec node-ts ./scripts/hooks/pre-push.ts",
		"commit-msg": "pnpm exec node-ts ./scripts/hooks/commit-msg.ts $@"
	},
	"lint-staged": {
		"*.{js,ts,vue}": [
			"pnpm run lint",
			"pnpm run prettier"
		]
	}
}
