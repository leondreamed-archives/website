{
	"name": "website",
	"private": true,
	"prettier": "@leonzalion/configs/prettier.cjs",
	"commitlint": {
		"extends": [
			"@leonzalion/configs/commitlint.cjs"
		]
	},
	"scripts": {
		"dev:frontend": "pnpm dev --filter=./frontend",
		"build:frontend": "pnpm build --filter=./frontend",
		"update-compositions": "pnpm update-compositions --filter=./scripts",
		"upload-compositions": "pnpm upload-compositions --filter=./scripts",
		"import-compositions": "pnpm import-compositions --filter=./scripts",
		"update-stats": "pnpm start --filter=./update-stats",
		"prepare": "lion-git-hooks",
		"test": "pnpm recursive run test",
		"lint": "pnpm recursive run lint",
		"prettier": "pnpm recursive run prettier",
		"tc": "pnpm recursive tc"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.3",
		"@leonzalion/configs": "^1.2.3",
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.23",
		"eslint": "^8.12.0",
		"is-ci": "^3.0.1",
		"lint-staged": "^12.3.7",
		"lion-git-hooks": "^1.0.8",
		"prettier": "^2.6.2",
		"sync-index": "^1.0.13",
		"tsc-alias": "^1.6.5",
		"typescript": "^4.6.3"
	},
	"lint-staged": {
		"*.{js,ts,vue}": [
			"pnpm run lint",
			"pnpm run prettier"
		]
	},
	"dependencies": {
		"eslint-define-config": "^1.3.0"
	}
}
